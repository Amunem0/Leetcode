//Approach 1

class Solution {
public:
    int findTheWinner(int n, int k) {
        vector<int> arr;
        for(int i = 1; i <= n; i++) {
            arr.push_back(i);
        }

        int i = 0;

        while(arr.size() > 1) {
            int idx = (i + k - 1) % arr.size();

            arr.erase(arr.begin() + idx);

            i = idx;
        }

        return arr[0];
    }
};


//Approach 2 
class Solution {
public:
    int findTheWinner(int n, int k) {
        queue<int>q;
        for(int i=1;i<=n;i++){
            q.push(i);
        }
        while(q.size()>1){
            for(int i=1;i<=k-1;i++){ //Removing k-1 elements and pushing them to the queue again
                q.push(q.front());
                q.pop();
            }
            q.pop();
        }
        return q.front();
    }
};
